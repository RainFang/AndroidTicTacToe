<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center_horizontal"
    android:orientation="horizontal" >

    <scottmd3.tictactoe.BoardView
        android:id="@+id/board"
        android:layout_width="240dp"
        android:layout_height="240dp"
        android:layout_marginTop="5dp" />

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/information"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/board"
            android:layout_marginTop="20dp"
            android:gravity="center_horizontal"
            android:text="@string/info_Label"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/player_score_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/information"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="20dp"
            android:gravity="center_horizontal"
            android:paddingLeft="10dp"
            android:text="@string/score_label_human"
            android:textSize="20dp" />
        
        <TextView
            android:id="@+id/player_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/tie_score_label"
            android:layout_alignParentRight="true"
            android:gravity="right"
            android:paddingRight="20dp"
            android:text="0"
            android:textSize="20dp"
            android:textStyle="bold" />
        
        <TextView
            android:id="@+id/tie_score_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/player_score_label"
            android:layout_below="@+id/player_score_label"
            android:layout_marginTop="14dp"
            android:gravity="center_horizontal"
            android:paddingLeft="10dp"
            android:text="@string/score_label_tie"
            android:textSize="20dp" />
        
        <TextView
            android:id="@+id/tie_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/tie_score_label"
            android:layout_alignBottom="@+id/tie_score_label"
            android:layout_alignParentRight="true"
            android:gravity="right"
            android:paddingRight="20dp"
            android:text="0"
            android:textSize="20dp"
            android:textStyle="bold" />
        
        <TextView
            android:id="@+id/computer_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tie_score"
            android:layout_below="@+id/tie_score"
            android:layout_marginTop="14dp"
            android:gravity="right"
            android:text="0"
            android:textSize="20dp"
            android:textStyle="bold" />

		<TextView
            android:id="@+id/computer_score_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/computer_score"
            android:layout_alignBottom="@+id/computer_score"
            android:layout_alignLeft="@+id/tie_score_label"
            android:gravity="left"
            android:paddingLeft="10dp"
            android:text="@string/score_label_computer"
            android:textSize="20dp" />
            
    </RelativeLayout>
</LinearLayout>